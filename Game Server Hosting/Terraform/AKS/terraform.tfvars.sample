  "Environment" = "Dev"
  "Owner"       = "Ops Team"
  "Deployment"  = "Terraform"
  "Application" = "Game Server Hosting"
}
prefix = "dev"

#Networking Module
rg_hub                   = "Network-Rg" /*This should be an existing resource*/

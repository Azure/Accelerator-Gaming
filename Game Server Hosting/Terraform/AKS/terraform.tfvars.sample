peer2_name               = "peer-spoke-to-hub"

hub_subscription_id   = "9e087dff-9c5b-4650-96ee-19cfe5269c5d"
spoke_subscription_id = "9e087dff-9c5b-4650-96ee-19cfe5269c5d"

# Kubernetes Module
aks_dns_prefix    = "aks"
k8s_version       = "1.25.4"
